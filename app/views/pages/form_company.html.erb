<body id="page-micuenta">

<!--header-->
<header id="top" class="light-shadowed">
  <div class="container">
    <div class="row">
      <div class="span3" id="logo-header"><a href="/offers"><img src="/assets/logo-header.png"></a></div>

    </div>
    <!--end row-->
  </div>
  <!--end container header-->
</header>
<!--end header-->


<div class="container" id="main-content" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html"
     xmlns="http://www.w3.org/1999/html">
    <div class="rounded-borders ">
        <section class="span11 rounded-borders light-shadowed">
            <header class="out rounded-borders-top">
            <h2>¿Querés publicar con nosotros?</h2>
            </header>

            <div class="wrapper-padding">

                <div class="wrapper">
                    <article class="row-fluid">
                        <div class="span8">
                          <% if !alert.nil?%>
                              <div class="alert">
                                <%= alert %>
                              </div>
                          <%end%>
                            <%= form_for(Message.new(), :url => { :action => "contact_potential_advertiser", :controller => :pages }, :html => { :method => :post }) do |form| %>
                            <fieldset>

                                <p>Se parte de DealHunter y suma a tu empresa. Completá los campos del formulario para
                                    que guardemos tu información.</p>

                                <hr>

                                <div class="row-fluid">
                                    <div class="span6">
                                        <label>Nombre</label>
                                        <%= form.text_field :name, :class =>"input_xlarge" %>


                                    </div>
                                    <div class="span6">
                                        <label>Email</label>
                                        <%= form.text_field :email, :class =>"input_xlarge" %>

                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <div class="span6">
                                        <label>CUIT</label>
                                        <%= form.text_field :cuit, :class =>"input_xlarge" %>


                                    </div>
                                    <div class="span6">
                                        <label>Teléfono</label>
                                        <%= form.text_field :phone, :class =>"input_xlarge" %>

                                    </div>
                                </div>

                                <label>Mensaje/Información de la empresa</label>
                                <%= form.text_area :body, :rows =>3, :style =>"width:97.8%;" %>
                                <hr>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-dealhunter rounded-borders-btn">Enviar</button>
                                </div>
                            </fieldset>
                            <% end %>

                        </div>
                        <!--end span8-->
                        <div class="span3 offset1">
                            <address>
                                <strong>Dirección</strong><br>
                                Pte. Perón 1500<br>
                                Pilar, Pcia. de Buenos Aires, CP 1664<br>
                                <abbr title="Phone"></abbr>
                            </address>

                            <address>
                                <strong>Email</strong><br>
                                <a href="mailto:info@dealhunter">info@dealhunter.com</a>
                            </address>

                            <address>
                                <strong>Teléfono</strong><br>

                                <p>0800-111-DEAL(3315)</p>
                            </address>

                            <address>
                                <strong>Twitter</strong><br>

                                <p>Para obtener respuestas en tiempo real a todas tus preguntas agreganos en twitter <a
                                        href="http://www.twitter.com/dealhunterarg">@dealhunterArg</a></p>
                            </address>

                        </div>
                        <!--end span4-->

                    </article>

                </div>
                <!--end wrapper-->
            </div>
            <!--end wrapper-padding-->
        </section>
        <!--end main content-->
    </div>
    <!--end container-->
</div>
<!--end row-->


<footer id="footer-wrapper" class="dh-footer">
    <div class="container">


        <hr>

        <div id="footer-middle" class="row">
            <div class="span7">
                <nav>
                    <ul class="inline">
