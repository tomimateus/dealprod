<!--container-->
<div class="container" id="main-content">
  <div class="row">
    <section class="span8 rounded-borders light-shadowed">
      <header class="out rounded-borders-top">
        <h2>Cambiar Contraseña</h2>
      </header>

      <div class="wrapper-padding">

        <div class="wrapper">
          <article>
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>
                <% if @alert %>
                    <div class="alert" id="register-alert">
                      Datos inválidos.
                    </div>
                <% end %>

                <fieldset>
                  <label for="inputPass">Contraseña Actual: </label>
                  <%= f.password_field :current_password, :autocomplete => "off", :class => "input-xlarge", :required => true %>
                  <label for="inputNewPass">Nueva Contraseña: </label>
                  <%= f.password_field :password, :class => "input-xlarge", :required => true %>
                  <label for="inputNewPassAgain">Repetir Contraseña: </label>
                  <%= f.password_field :password_confirmation, :class => "input-xlarge", :required => true %>
                  <hr>
                </fieldset>

                <div class="text-center">
                  <button type="submit" class="btn btn-dealhunter rounded-borders-btn">Cambiar Contraseña</button>
                </div>

            <% end %>

          </article>

        </div>
        <!--end wrapper-->
      </div>
    </section>
    <!--end main content-->


    <!--sidebar-->
    <aside class="span4" style="background: none;">

      <div class="wrapper-padding rounded-borders light-shadowed" style="background: #ffffff;">

        <h2 class="rounded-borders-btn">Detalle de Cuenta</h2>
        <ul class="aside-nav">
          <% if current_user.company? %>
              <li><a href="<%= users_offers_company_user_path %>">Mis Ofertas</a></li>
              <li><a href="<%= users_branches_company_user_path %>">Mis sucursales</a></li>
          <% else %>
              <li><a href="<%= users_offers_client_user_path %>">Mis Ofertas</a></li>
              <li><a href="<%= users_titles_user_path %>">Mis Intereses</a></li>
          <% end %>
        </ul>
        <h2 class="rounded-borders-btn">Información Personal</h2>
        <ul class="aside-nav">
          <li><a href="<%= edit_user_path(current_user) %>">Mi Perfil</a></li>
          <li><a href="<%= users_statistics_path %>">Mis Estadísticas</a></li>
        </ul>
        <h2 class="rounded-borders-btn">Preferencias</h2>
        <ul class="aside-nav">
          <li><a href="<%= edit_user_registration_path %>" class="active">Contraseña</a></li>
        </ul>
        <% if !current_user.company? %>
            <ul class="aside-nav">
              <li><a href="<%= users_newsletter_freq_path %>">Frecuencia del newsletter</a></li>
            </ul>
            </ul>
        <% end %>
      </div>
      <!--<div id="bags">-->
      <!--<div id="stage">-->
      <!--<div id="block"></div>-->
      <!--</div>-->
      <!--</div>-->
    </aside>
    <!--end sidebar-->
  </div>
  <!--end container-->
</div><!--end row-->
