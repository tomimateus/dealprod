<h1>Listing prizes</h1>

<table>
  <tr>
    <th>Offer</th>
    <th>Name</th>
    <th>Real price</th>
    <th>Discount percentage</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @prizes.each do |prize| %>
  <tr>
    <td><%= prize.offer_id %></td>
    <td><%= prize.name %></td>
    <td><%= prize.real_price %></td>
    <td><%= prize.discount_percentage %></td>
    <td><%= link_to 'Show', prize %></td>
    <td><%= link_to 'Edit', edit_prize_path(prize) %></td>
    <td><%= link_to 'Destroy', prize, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

